<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin", :role => "form", :method => :put}) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">My account</h2>

  <%= f.text_field :name, :class=> "form-control first", :placeholder => "Name" %>
  <%= f.text_field :uid, :class=> "form-control middle", :placeholder => "UID", :disabled => true %>
  <%= f.email_field :email, :class=> "form-control middle", :placeholder => "Email" %>

  <%= f.text_field :agency_number, :class=> "form-control middle", :placeholder => "Agency Number", :disabled => true %>
  <%= f.text_field :account_number, :class=> "form-control middle", :placeholder => "Account Number", :disabled => true %>

  <%= f.password_field :password, :class=> "form-control middle", :placeholder => "Password" %>
  <%= f.password_field :password_confirmation, :class=> "form-control last", :placeholder => "Password Confirmation" %>

  <hr>

  <%= f.password_field :current_password, :class=> "form-control last", :placeholder => "Current Password" %>

  <%= f.submit "Update", :class => "btn btn-lg btn-primary btn-block" %>
  <hr>
  <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger pull-right" %>
<% end %>
