<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-signin", :role => "form"}) do |f| %>

  <% if resource.errors.any? %>
    <%= render :partial => "layouts/messages", :locals => {:type => :alert, :msg => resource.errors.full_messages } %>
  <% end -%>

  <h2 class="form-signin-heading">Sign up</h2>

  <%= f.text_field :name, :class=> "form-control first", :autofocus => true, :placeholder => "Name" %>
  <%= f.text_field :uid, :class=> "form-control middle", :placeholder => "UID" %>
  <%= f.email_field :email, :class=> "form-control middle", :placeholder => "Email" %>

  <%= f.fields_for :account, resource.build_account do |account_form| %>
    <%= account_form.text_field :agency, :class=> "form-control middle", :placeholder => "Agency Number" %>
    <%= account_form.text_field :number, :class=> "form-control middle", :placeholder => "Account Number" %>
  <% end %>

  <%= f.password_field :password, :class=> "form-control middle", :placeholder => "Password" %>
  <%= f.password_field :password_confirmation, :class=> "form-control last", :placeholder => "Password Confirmation" %>

  <%= f.submit "Sign up", :class => "btn btn-lg btn-primary btn-block" %>
<% end %>
