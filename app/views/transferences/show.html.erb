<div class="panel panel-primary">

  <div class="panel-heading">
    Receipt
  </div>

  <div class="panel-body">

    <div class="well well-sm">
      <h5>Transference Receipt <small><%= "##{@transference.id}" %></small></h5>

      <p>To: <%= @to_user.name %></p>
      <p>UID: <%= @to_user.uid %></p>
      <p>Agency: <%= @to_user.account.agency %></p>
      <p>Account: <%= @to_user.account.number %></p>
      <hr>
      <p>Amount: <%= number_to_currency(@transference.amount) %></p>
      <hr>
      <p>Transaction at <%= @transference.created_at %></p>
    </div>

  </div>

</div>
