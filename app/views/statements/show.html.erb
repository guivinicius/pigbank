<div class="panel panel-primary">

  <div class="panel-heading">
    Statement
  </div>

  <div class="panel-body"></div>

  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Operation Time</th>
        <th>Description</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
      <%= content_tag_for(:tr, @transactions) do |t| %>
        <td><%= t.id %></td>
        <td><%= l(t.created_at, :format => :short) %></td>
        <td><%= t.description %></td>
        <td class="text-<%= t.is_debit? ? 'danger' : 'primary' %>"><%= number_to_currency(t.amount) %></td>
      <% end %>
      <tr class="active">
        <td colspan="3"></td>
        <td class="text-primary"><%= number_to_currency(current_user.balance) %></td>
      </tr>
    </tbody>
  </table>

</div>